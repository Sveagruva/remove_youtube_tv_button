{
  "manifest_version": 2,
  "version": "0.1.2",
  "name": "__MSG_name__",
  "description": "__MSG_app_description__",
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["main.js"],
    "css": ["style.css"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "icons": {
    "16": "icons/16_disabled.png",
    "48": "icons/48_disabled.png",
    "128": "icons/128_disabled.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "default_locale": "en",
  "homepage_url": "https://github.com/sveagruva/remove_youtube_tv_button",
  "browser_action": {
    "default_icon": {
      "16": "icons/16_disabled.png",
      "48": "icons/48_disabled.png",
      "128": "icons/128_disabled.png"
    }
  }
}